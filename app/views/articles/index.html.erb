<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= @top_article.title %>
  <%= @rpg_game.title %>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.creator.name %></td>
        <td><%= article.title %></td>
        <td><%= image_tag article.image.url %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', category_path(article.category_id) %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
